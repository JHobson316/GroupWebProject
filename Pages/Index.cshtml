@page
@using GroupWebProject.Pages.Shared
@using Microsoft.AspNetCore.Identity
@using GroupWebProject.Areas.Identity.Data
﻿@using GroupWebProject.Models
﻿@using GroupWebProject
@inject SignInManager<AppUser> SignInManager
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To The Shop</h1>
    <p>Have a look around and find what you like.</p>
    @if (SignInManager.IsSignedIn(User))
    {
        <p>
            Enjoy your Shop
        </p>
    }
    else
    {
    <p>Please SignUp/Login to buy items</p>
    }
    <img src="https://images.unsplash.com/photo-1534723452862-4c874018d66d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80" style="width: 1000px; height: 500px"/>
</div>
